{
  "manifest_version": 2,
  "name": "ReadIn AI - Meeting Assistant",
  "version": "1.0.0",
  "description": "AI-powered real-time meeting assistant. Get instant talking points during video calls.",
  "author": "Brider LLC",
  "homepage_url": "https://www.getreadin.us",

  "browser_specific_settings": {
    "gecko": {
      "id": "readin-ai@brider.io",
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ReadIn AI"
  },

  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "*://*.zoom.us/*",
        "*://*.webex.com/*",
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    "icons/*"
  ]
}
