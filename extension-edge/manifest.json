{
  "manifest_version": 3,
  "name": "ReadIn AI - Meeting Assistant",
  "version": "1.0.0",
  "description": "AI-powered real-time meeting assistant. Get instant talking points during video calls.",
  "author": "Brider LLC",
  "homepage_url": "https://www.getreadin.us",

  "permissions": [
    "activeTab",
    "tabCapture",
    "offscreen",
    "storage",
    "tabs",
    "notifications"
  ],

  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://*.webex.com/*",
    "https://teams.microsoft.com/*",
    "https://teams.live.com/*",
    "https://*.discord.com/*",
    "https://*.slack.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ReadIn AI"
  },

  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://*.webex.com/*",
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
