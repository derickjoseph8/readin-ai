# ============================================================
# ReadIn AI Backend Configuration
# ============================================================
# Copy this file to .env and fill in your values

# ------------------------------------------------------------
# DATABASE (PostgreSQL)
# ------------------------------------------------------------
# Format: postgresql://username:password@host:port/database
# Local: postgresql://postgres:password@localhost:5432/readin_ai
# Docker: postgresql://readin:password@db:5432/readin_ai
DATABASE_URL=postgresql://postgres:password@localhost:5432/readin_ai

# ------------------------------------------------------------
# JWT AUTHENTICATION
# ------------------------------------------------------------
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-super-secret-key-change-this-to-random-string
JWT_ALGORITHM=HS256
# SECURITY: Use short token expiry (1 day recommended, max 7 days)
ACCESS_TOKEN_EXPIRE_DAYS=1

# ------------------------------------------------------------
# STRIPE PAYMENTS
# ------------------------------------------------------------
# Get your keys from: https://dashboard.stripe.com/apikeys
# Test mode keys start with sk_test_ and pk_test_
# Live mode keys start with sk_live_ and pk_live_

# Secret key (server-side only, never expose)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Publishable key (can be exposed to frontend)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Webhook secret - get from Stripe Dashboard > Webhooks
# Create webhook endpoint: https://your-domain.com/webhooks/stripe
# Events to listen: checkout.session.completed, customer.subscription.updated, customer.subscription.deleted
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Price ID - run setup_stripe.py to create, or create manually in Stripe Dashboard
# Products > Create Product > Add Price ($10/month recurring)
STRIPE_PRICE_MONTHLY=price_your_monthly_price_id

# ------------------------------------------------------------
# PAYSTACK PAYMENTS (Primary payment provider)
# ------------------------------------------------------------
# Get your keys from: https://dashboard.paystack.com/#/settings/developers
# Test mode keys start with sk_test_ and pk_test_
# Live mode keys start with sk_live_ and pk_live_

# Secret key (server-side only, never expose)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Public key (can be exposed to frontend)
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Webhook secret - get from Paystack Dashboard
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Sales team email for enterprise alerts
SALES_TEAM_EMAIL=sales@getreadin.ai

# ------------------------------------------------------------
# APP SETTINGS
# ------------------------------------------------------------
TRIAL_DAYS=7
TRIAL_DAILY_LIMIT=10
APP_NAME=ReadIn AI

# ------------------------------------------------------------
# OPTIONAL: CORS Origins (comma-separated)
# ------------------------------------------------------------
# CORS_ORIGINS=https://getreadin.ai,https://app.getreadin.ai

# ------------------------------------------------------------
# REDIS (for rate limiting and caching)
# ------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# ------------------------------------------------------------
# ANTHROPIC AI (for meeting summaries)
# ------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-api-key

# ------------------------------------------------------------
# TEST CONFIGURATION (optional - for payment testing)
# ------------------------------------------------------------
# TEST_PRICING_EMAILS={"email@example.com": {"individual_monthly": 0.99, "individual_annual": 9.90}}
# TEST_UPGRADE_EMAILS=email1@example.com,email2@example.com
